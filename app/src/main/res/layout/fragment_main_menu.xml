<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/efec8174"
    android:orientation="vertical"
    android:gravity="center_vertical|top"
    tools:context=".ui.fragments.FlatStartFragment"

    android:paddingTop="80dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textAlignment="center">

        <ImageView
            android:src="@drawable/c38b5dd"
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:src="@drawable/c38b5dd" />

        <ImageView
            android:layout_marginVertical="65dp"
            android:layout_width="match_parent"
            android:layout_height="20dp"

            android:src="@drawable/smlt_logo_blue_ru"
            tools:src="@drawable/smlt_logo_blue_ru" />
    </FrameLayout>

    <Button
        android:layout_margin="14dp"
        android:id="@+id/b_main_create"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Создать обход" />


    <Button
        android:layout_margin="14dp"
        android:id="@+id/b_main_reports"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Отчёты" />

    <Button
        android:id="@+id/b_main_legend"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="14dp"
        android:text="Легенда" />

    <Button
        android:id="@+id/b_main_test"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="14dp"
        android:text="Режим: Тест" />


